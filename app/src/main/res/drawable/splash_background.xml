<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/splash_green"/> <!-- Define this in colors.xml -->
        </shape>
    </item>

    <!-- Centered Logo -->
    <item android:gravity="center">
        <bitmap
            android:src="@drawable/ic_potato_leaf"
        android:gravity="center"
        android:width="120dp"
        android:height="120dp"/>
    </item>

    <!-- Optional: App Name at Bottom -->
    <item android:gravity="bottom|center" android:bottom="40dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <size android:height="80dp"/>
        </shape>
    </item>

</layer-list>